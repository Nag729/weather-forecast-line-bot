{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Serverless",
      "program": "${workspaceFolder}/node_modules/.bin/sls",
      "cwd": "${workspaceFolder}",
      "args": ["invoke", "local", "-f", "fetchWeather", "--data", "{}"],
      "outFiles": ["${workspaceRoot}/.webpack/service/*"],
      "sourceMaps": true,
      "smartStep": true
    }
  ]
}
